<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/general_chitter_style.css">
    <link href="https://fonts.googleapis.com/css?family=Work+Sans" rel="stylesheet">
  </head>
  <body>

    <div class="title">
      <h1>
        Welcome to Chitter!
        <br>
        A totally-not-a-twitter-rip-off platform to share random thoughts.</h2>
    </div>
    <div class="flash_area"><%= flash[:n] %></div> <br>
    <div class="actions">
      <form action="/users/new" method="GET">
        <input type="submit" value="Sign Up">
      </form>
      <form action="/users/log_in" method="GET">
        <input type="submit" value="Log in">
      </form>
    </div>
    <div class="peep_enter">
      <form action="/peeps/new" method="POST">
        <input type="text" name="text" placeholder="Enter your peep">
        <input type="text" name="author" placeholder="Enter your name">
        <input type="submit" value="Add Peep">
      </form>
    </div>
    <% @peeps.each do |peep| %>
    <div class="single_peep">

      <%= peep.author %>
      wrote:
      <%= peep.text %>
      <br>
      <h3>
        <%= peep.date %>
      </h3>
    </div>
    <% end %>
  </body>
</html>
